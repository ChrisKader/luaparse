{
  "compilerOptions": {
    "isolatedModules": true,
    "baseUrl": "src",
    "paths": {
      "#src": ["."],
      "#src/*": ["./*"],
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}